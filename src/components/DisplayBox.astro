<div class="display-box">
  <span class="display-box-image"><slot name="box-image" /></span>
  <span class="display-box-header"><slot name="box-header" /></span>
  <span class="display-box-content"><slot name="box-content" /></span>
</div>

<style>
  .display-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16),
      0 2px 10px 0 rgba(0, 0, 0, 0.12);
    border-radius: 25px;
    border: 1px solid;
    border-color: var(--main-accent-color);
    padding: 0.5rem;
    min-width: 270px;
    max-width: 32ch;
    transition: translate 1s ease-out 10ms;
    margin: 0.75rem;
  }

  .display-box:hover {
    translate: 0 -0.5rem;
  }
</style>
