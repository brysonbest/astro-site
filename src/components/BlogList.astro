---
import BlogPost from "./BlogPost.astro";
import { getCollection } from "astro:content";

import "../styles/global.css";

const allPosts = await getCollection("posts");
---

<ul>
  {
    allPosts.map((post) => (
      <BlogPost url={"/posts/" + post.slug} title={post.data.title} />
    ))
  }
</ul>
